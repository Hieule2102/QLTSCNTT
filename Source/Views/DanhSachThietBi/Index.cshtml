@model IEnumerable<Source.Models.THIETBI>

@{
    ViewBag.Title = "Index";
}

    <main>
        <div class="container link">
            <p>Trang chủ > Báo cáo > Danh sách thiết bị</p>
            <hr />
            <h2>@ViewBag.HINH_ANH</h2>
        </div>
        <section class="container" id="ds-tb">
            @using (Html.BeginForm("Index", "DanhSachThietBi"))
            {
                @Html.AntiForgeryToken() @Html.ValidationSummary(true)
                <h1 class="title">DANH SÁCH THIẾT BỊ</h1>
                <div class="search">
                    <input type="text" name="search" class="placeholder" placeholder="" />
                    <button class="btn-search">
                        <span>Tìm kiếm</span><i class="fas fa-search"></i>
                    </button>
                </div>
                <div class="loc">
                    <h4><i class="fas fa-filter"></i></h4>
                    <div class="div-filter">
                        <div class="filter1">
                            <div class="filter">
                                <label for="">Nhóm TB</label>
                                @Html.DropDownList("MA_NHOMTB", null, String.Empty, new
                                {
                                    @class =
                                  "form-control",
                                    @placeholder = "",
                                    @onchange = @"Fill_LoaiTB()"
                                })
                            </div>
                            <div class="filter">
                                <label for="">Loại TB</label>
                                <select class="form-control"
                                        id="MA_LOAITB"
                                        name="MA_LOAITB"
                                        onchange="form.submit()"></select>
                            </div>
                        </div>

                        <div class="filter2">
                            <div class="filter">
                                <label for="">Đơn vị</label>
                                @Html.DropDownList("MA_DON_VI", null, String.Empty, new
                                {
                                    @class =
                                  "form-control",
                                    @placeholder = "",
                                    @onchange = @"form.submit()"
                                })
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="div-dstb">
                <div class="ds-tb">
                    <table>
                        <tr>
                            <th>Mã TB</th>
                            <th>Tên TB</th>
                            <th>Nhóm TB</th>
                            <th>Loại TB</th>
                            <th>Serial</th>
                            <th>Giá tiền</th>
                            <th>THBH</th>
                            <th>Tình trạng</th>
                            <th>ĐVQL</th>
                            <th>Người QL</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MATB)</td>
                                <td>@Html.DisplayFor(modelItem => item.TENTB)</td>
                                <td>
                                    @Html.DisplayFor(modelItem =>
                                item.LOAI_THIETBI.NHOM_THIETBI.TEN_NHOM)
                            </td>
                            <td> @Html.DisplayFor(modelItem => item.LOAI_THIETBI.TEN_LOAI)</td>
                            <td>@Html.DisplayFor(modelItem => item.SO_SERIAL)</td>
                            <td>@Html.DisplayFor(modelItem => item.GIA_TIEN)</td>
                            <td>@Html.DisplayFor(modelItem => item.THOI_HAN_BAO_HANH)</td>
                            <td>@Html.DisplayFor(modelItem => item.TINH_TRANG)</td>
                            <td>@Html.DisplayFor(modelItem => item.DON_VI.TEN_DON_VI)</td>
                            <td>@Html.DisplayFor(modelItem => item.MANS_QL)</td>
                        </tr>
                    }
                    </table>
                </div>
                <div class="div-cauhinh">
                    <div class="cau-hinh">
                        <span class="close-cauhinh">
                            <i class="far fa-times-circle fa-2x"></i>
                        </span>
                        <div class="img">
                            <div class="img-container">
                                <img src="" alt="" />
                            </div>
                            <p class="ten-tb">Camera Vivotek</p>
                        </div>
                        <h4 class="sub-title">Thông số kỹ thuật</h4>
                        <div class="div-thong-so">
                            <div class="thong-so">
                                <p>Cảm biến:</p>
                                <p>Độ phân giải:</p>
                                <p>Ống kính:</p>
                                <p>Hỗ trợ luồng:</p>
                            </div>
                            <div class="gia-tri">
                                <p>CMOS</p>
                                <p>Mega-pixel</p>
                                <p>CS thay đổi được</p>
                                <p>2 luồng</p>
                            </div>
                        </div>

                        <button id="chct">Cấu hình chi tiết</button>
                    </div>
                    <div class="cau-hinh-chi-tiet">
                        <div class="cau-hinh">
                            <span class="close-cauhinh">
                                <i class="far fa-times-circle fa-2x"></i>
                            </span>
                            <div class="img">
                                <div class="img-container">
                                    <img src="" alt="" />
                                </div>
                                <p class="ten-tb">Camera Vivotek</p>
                            </div>
                            <h4 class="sub-title">Thông số kỹ thuật</h4>
                            <div class="div-thong-so">
                                <div class="thong-so">
                                    <p>Cảm biến:</p>
                                    <p>Độ phân giải:</p>
                                    <p>Ống kính:</p>
                                    <p>Hỗ trợ luồng:</p>
                                </div>
                                <div class="gia-tri">
                                    <p>CMOS</p>
                                    <p>Mega-pixel</p>
                                    <p>CS thay đổi được</p>
                                    <p>2 luồng</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>



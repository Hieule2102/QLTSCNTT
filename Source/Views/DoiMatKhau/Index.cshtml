@model Source.Models.NGUOI_DUNG

@{
    ViewBag.Title = "DoiMatKhau";
}

<main>
    <section id="login" class="login-show">
        <div class="dang-nhap">
            <h4>Đăng nhập</h4>
            @using (Html.BeginForm("Index", "DoiMatKhau", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <form action="">
                    <div class="form-group">
                        <label for="">Tên đăng nhập:</label>
                        @ViewBag.TEN_DANG_NHAP
                    </div>
                    <div class="form-group">
                        <label for="">Mật khẩu cũ:</label>
                        <input type="password" name="MAT_KHAU_CU" class="placeholder" placeholder="&#xf023;" />
                    </div>

                    <div class="form-group">
                        <label for="">Mật khẩu mới:</label>
                        <input type="password" name="MAT_KHAU_MOI" class="placeholder" placeholder="&#xf023;" />
                    </div>

                    <div class="form-group">
                        <label for="">Xác nhận mật khẩu mới:</label>
                        <input type="password" name="XAC_NHAN_MAT_KHAU" class="placeholder" placeholder="&#xf023;" />
                    </div>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <p class="text-danger">@ViewBag.ErrorMessage</p>
                    }

                    <button type="submit">Xác nhận</button>
                </form>
            }
            <a class="login-close"><i class="far fa-times-circle fa-2x"></i></a>
        </div>
    </section>
</main>


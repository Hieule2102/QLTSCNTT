@model IEnumerable<Source.Models.XUAT_KHO>

@{
    ViewBag.Title = "Index";
}

<main>
    <div class="container link">
        <p>Trang chủ > Chức năng > Xuất kho</p>
        <hr />
    </div>
    <section class="container" id="xuat-kho">
        <h1 class="title">XUẤT KHO</h1>
        @using (Html.BeginForm("Create", "XuatKho", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
        <div class="form-xuat-kho">
            <div class="thong-tin-tb-xuat-kho">
                <h4 class="sub-title">
                    Thông tin thiết bị xuất kho
                </h4>
                @*<form action="">*@
                    <div class="form-group">
                        <label for="">Mã thiết bị:</label>
                        @Html.DropDownList("MATB", null, String.Empty, new { @class = "form-control", @placeholder = "", @onchange = @"Fill_TenTB();" })
                    </div>
                    <div class="form-group">
                        <label for="">Tên thiết bị:</label>
                        @*@Html.TextBox("TENTB", null, new { @class = "form-control" })*@
                        <input type="text" class="form-control" id="TENTB" name="TENTB" />
                    </div>
                <div class="form-group">
                    <label for="">ĐV nhận:</label>
                    @Html.DropDownList("MADV_XUAT", null, String.Empty, new { @class = "form-control", @placeholder = "" })
                </div>
                    <div class="form-group">
                        <label for="">Người xuất:</label>
                        <select type="text" id="">
                            <option value=""></option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Nội dung:</label>
                        <input type="text" name="GHI_CHU" />
                    </div>
                @*</form>*@
            </div>
            <div class="dv-nhan">
                <h4 class="sub-title">
                    Đơn vị tiếp nhận
                </h4>
                @*<form action="">*@
                    <div class="form-group">
                        <label for="">ĐV nhận:</label>
                        @Html.DropDownList("MADV_NHAN", null, String.Empty, new { @class = "form-control", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        <label for="">Người nhận:</label>
                        <select type="text" id="">
                            <option value=""></option>
                        </select>
                    </div>
                @*</form>*@
            </div>
        </div>
        <div class="submit">
            <button class="luu" name="SAVE" value="save">LƯU</button>
            <button class="reset" name="REFESH" value="refesh">Làm mới</button>
        </div>
        }
    </section>
</main>

